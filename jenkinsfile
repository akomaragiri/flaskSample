pipeline {
  
  agent any
  
  environment {
      EB_HOME = "C:\\Users\\akomaragiri\\AppData\\Roaming\\Python\\Python37\\Scripts"
  }
	
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t akomaragiri/flask:latest .'
      }
    }
    stage('Publish') {
      steps {
        withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
          sh 'docker push akomaragiri/flask:latest'
        }
      }
    }
	stage('Deploy') {
      steps {
		sh 'pwd'
		sh 'ls -lt'
		sh 'printenv'
		sh '$EB_HOME/eb deploy'	
      }
    }
  }
}