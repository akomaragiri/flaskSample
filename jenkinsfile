node {
    def app
	
	environment {
		PATH = "%PATH%;C:\\Users\\akomaragiri\\AppData\\Roaming\\Python\\Python37\\Scripts"	
	}
	stage('Clone') {
        checkout scm
    }

    stage('Build') {
        app = docker.build("akomaragiri/flask:latest")
    }
	
	stage('Publish') {
        /* Finally, we'll push the image with two tags:
         * First, the incremental build number from Jenkins
         * Second, the 'latest' tag.
         * Pushing multiple tags is cheap, as all the layers are reused. */
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
	
	stage('Deploy') {
		sh 'printenv'
		sh 'C:\\Users\\akomaragiri\\AppData\\Roaming\\Python\\Python37\\Scripts\\eb deploy'		
	}
}