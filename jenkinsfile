pipeline {
  
  agent any
  
  checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'GitHub', url: 'https://github.com/akomaragiri/flaskSample']]])
  
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t akomaragiri/flask:latest .'
      }
    }
    stage('Publish') {
      steps {
        withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
          sh 'docker push akomaragiri/flask:latest'
        }
      }
    }
  }
}